{
  "name": "tasker",
  "version": "1.0.0",
  "description": "An Electron-based task management application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win-dir": "electron-builder --win --dir",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "tasker",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "dropbox": "^10.34.0",
    "vectra": "^0.11.1"
  },
  "devDependencies": {
    "electron": "^39.2.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tasker.app",
    "productName": "Tasker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/tasks.png",
      "maintainer": "Tasker <tasker@example.com>",
      "desktop": {
        "Name": "Tasker",
        "Comment": "Task Management Application",
        "GenericName": "Task Manager",
        "Categories": "Office;ProjectManagement;Productivity;",
        "StartupWMClass": "tasker"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
